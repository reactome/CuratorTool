<project name="URLMontior" default="package" basedir="..">
	<!-- Defining a list of directory names to be used -->
	<property name="classDir" value="${basedir}/classes" />
	<property name="srcDir" value="${basedir}/src" />
	<property name="libDir" value="${basedir}/lib" />

	<target name="clean">
		<delete dir="${classDir}" />
	</target>

	<!-- path for including all jar files in library directory -->
	<path id="class.path">
		<fileset dir="${libDir}">
			<include name="**/*.jar" />
		</fileset>
	</path>

	<target name="compile" depends="clean">
		<mkdir dir="${classDir}" />
		<javac includeantruntime="false" srcdir="${srcDir}" destdir="${classDir}">
			<classpath refid="class.path" />

			<include name="org/gk/scripts/URLMonitor.java" />
			<include name="org/gk/scripts/ProcessMonitor.java" />
		</javac>
	</target>
	
	<target name="package" depends="compile">
		<!-- Jar all files together so that they can be copied to a server -->
		<jar destfile="URLMonitor.jar">
			<fileset dir="${libDir}/javamail">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${libDir}">
				<include name="log4j/log4j-1.2.17.jar" />
			</fileset>
			<fileset dir="${classDir}">
				<include name="org/gk/scripts/URLMonitor.class" />
				<include name="org/gk/scripts/ProcessMonitor.class" />
			</fileset>
			<fileset dir="${basedir}">
				<include name="resources/URLsForMonitor.txt" />
				<include name="resources/EmailsForURLMonitor.txt" />
				<include name="resources/log4j.properties" />
			</fileset>
			<fileset dir="shell">
				<include name="runMonitorURLs.sh" />
			</fileset>
		</jar>
	</target>
</project>