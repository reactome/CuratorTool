<?xml version="1.0"?>
<!-- ====================================================================== 
     Sep 7, 2005 10:33:11 AM                                                        

     project        Reactome API Packaging	
     description    Packaging all Reactome database related APIs into one jar file.
                   
     guanming                                                                
     ====================================================================== -->
<project name="project" default="jar" basedir="..">
	<description>
		Copy all class files and source files into one jar file.
	</description>
	<property name="targetDir" value="reactomeAPI" />
	<property name="tmpDir" value="${targetDir}/tmp" />
	<property name="srcDir" value="${basedir}/src" />
	<property name="clsDir" value="${basedir}/classes" />
	<property name="libDir" value="${basedir}/lib" />

	<!-- Empty the direcotry. If nothing there, it should do nothing -->
	<target name="delete">
		<delete dir="${targetDir}" />
	</target>

	<!-- make a directory first. If it is there, it should do nothing -->
	<target name="mkdir" depends="delete">
		<mkdir dir="${targetDir}" />
		<mkdir dir="${tmpDir}"/>
	</target>

	<target name="clean">
		<delete dir="${classDir}" />
	</target>

	<!-- path for including all jar files in library directory -->
	<path id="class.path">
		<fileset dir="${libDir}">
			<include name="**/*.jar" />
		</fileset>
	</path>

	<target name="compile" depends="clean">
		<mkdir dir="${clsDir}" />
		<javac includeantruntime="false" srcdir="${srcDir}" destdir="${clsDir}">
			<classpath refid="class.path" />

			<include name="org/gk/model/**" />
			<include name="org/gk/schema/**" />
			<include name="org/gk/persistence/**" />
			<include name="org/gk/util/**" />
		</javac>
	</target>

	<target name="copy" depends="mkdir, compile">
		<copy todir="${tmpDir}">
			<fileset dir="${clsDir}">
				<include name="org/gk/model/**.class" />
				<include name="org/gk/schema/**.class" />
				<include name="org/gk/persistence/**.class" />
				<include name="org/gk/util/**.class" />
			</fileset>
			<fileset dir="${srcDir}">
				<include name="org/gk/model/**.java" />
				<include name="org/gk/schema/**.java" />
				<include name="org/gk/persistence/**.java" />
				<include name="org/gk/util/**.java" />
			</fileset>
		</copy>
	</target>

	<target name="jar" depends="copy">
		<jar destfile="${targetDir}/reactomeAPI.jar">
			<fileset dir="${tmpDir}">
			</fileset>
		</jar>
		<delete dir="${tmpDir}" />
	</target>
</project>